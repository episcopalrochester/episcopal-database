function person_lists_submit_form($form,&$form_state) {
  $who = array();
  $queries = person_type_queries();
  $address = $form['address']['#value'];
  $type = $form['type']['#value'];
  $filename = array();
  foreach ($form['who']['#options'] as $key => $title) {
    if ($form['who'][$key]['#checked']) {
      $filename[] = $title;
      $who[] = $queries[$title];
    }
  }
  $filename = str_replace(" ","_",implode("-",$filename))."-".date('Y-m-d');
  $people = person_fetch_people($who);
  if ($type == "csv") {
    header("Content-type: text/csv");
    header("Content-Disposition: attachment; filename=".$filename.".csv");
    header("Pragma: no-cache");
    header("Expires: 0");
    print '"Prefix","First Name","Middle Name","Last Name","Suffix","Nickname","Full Name"';
    $labels = array("Line 1","Line 2","City","State","Other","ZIP");
    if ($address == "mail") {
      foreach ($labels as $label) {
        print ',"Mail '.$label.'"';
      }
    }
    elseif ($address == "home") {
      foreach ($labels as $label) {
        print ',"Home '.$label.'"';
      }
    }
    else {
      foreach ($labels as $label) {
        print ',"Home '.$label.'"';
      }
      foreach ($labels as $label) {
        print ',"Mail '.$label.'"';
      }
    }
    print ',"Phone","Email"';
    if (in_array('Enewsletter Subscribers',$form['who']['#value']) ||
      in_array('Printed Newsletter Subscribers',$form['who']['#value']) ||
      in_array('Printed Directory Subscribers',$form['who']['#value']) ||
      in_array('Printed Invitation Subscribers',$form['who']['#value'])
    ) {
      print ',"Enews","Printed News","Directory","Invites"';
      print ',"Priv:No Dir","Pv:No Spou","Pv:No Addr","Pv:No Phone","Pv:No Email"';
    }
    if (in_array('Clergy Birthdays This Month',$form['who']['#value']) ||
      in_array('Clergy Birthdays Next Month',$form['who']['#value'])) {
        print ',"Date of Birth"';
      }
    if (in_array('Clergy Ordination Anniversaries This Month',$form['who']['#value']) ||
      in_array('Clergy Ordination Anniversaries Next Month',$form['who']['#value'])) {
        print ',"Diaconate Ord.","Priesthood Ord."';
      }
    if (in_array('Wardens',$form['who']['#value']) ||
      in_array('Clergy in Congregations',$form['who']['#value'])) {
        print ',"Parish","Title"';
      }
    print "\n";

    foreach ($people['nodes'] as $person) {
      print "\"";
      print _get_value($person,"field_person_title");
      print "\",\"";
      print _get_value($person,"field_person_first_name");
      print "\",\"";
      print _get_value($person,"field_person_middle_name");
      print "\",\"";
      print _get_value($person,"field_person_last_name");
      print "\",\"";
      print _get_value($person,"field_person_suffix");
      print "\",\"";
      if ($nickname = _get_value($person,"field_person_nickname"))
        print $nickname;
      else
        print _get_value($person,"field_person_first_name");
      print "\",\"";
      print _get_value($person,"field_person_title") . " ";
      print person_get_full_name($person);
      print " "._get_value($person,"field_person_suffix");
      print "\",\"";
      $mailing = array_filter(person_get_address($person,"mail"));
      if ($address == "mail") {
        if (!empty($mailing)) {
          print implode("\",\"",person_get_address($person,"mail"));
        } else {
          print implode("\",\"",person_get_address($person,"home"));
        }
      }
      elseif ($address == "home") {
        print implode("\",\"",person_get_address($person,"home"));
      }
      else {
        print implode("\",\"",person_get_address($person,"home"));
        print '","';
        print implode("\",\"",person_get_address($person,"mail"));
      }
      print '"';
      $phone = person_get_phone($person,"pref");
      print ',"'.$phone['number'].'"';
      $email = person_get_email($person,"pref");
      print ',"'.$email['addy'].'"';
      if (in_array('Enewsletter Subscribers',$form['who']['#value']) ||
        in_array('Printed Newsletter Subscribers',$form['who']['#value']) ||
        in_array('Printed Directory Subscribers',$form['who']['#value']) ||
        in_array('Printed Invitation Subscribers',$form['who']['#value'])
      ) {
        $subscriptions = array('enews','printed_news','directory','invitations');
        foreach ($subscriptions as $sub) {
          eval("\$field = \$person->field_person_$sub;");
          if (isset($field['und'][0]['value'])) {
            if ($field['und'][0]['value'] == 1) {
              print ',"X"';
            }
            else { print ',""'; }
          }
          else { print ',""'; }
        }
        $privacy = array('directory','partnerships','home','phone','email');
        foreach ($privacy as $pv) {
          eval("\$field = \$person->field_person_no_$pv;");
          if (isset($field['und'][0]['value'])) {
            if ($field['und'][0]['value'] == 1) {
              print ',"X"';
            }
            else { print ',""'; }
          }
          else { print ',""'; }
        }
      }
      if (in_array('Clergy Birthdays This Month',$form['who']['#value']) ||
        in_array('Clergy Birthdays Next Month',$form['who']['#value'])) {
          $dob = new DateTime(_get_value($person,"field_person_dob"));
          print ",".date_format($dob,'m/d/Y');
        }
      if (in_array('Clergy Ordination Anniversaries This Month',$form['who']['#value']) ||
        in_array('Clergy Ordination Anniversaries Next Month',$form['who']['#value'])) {
          $priesthood = _get_value($person,"field_person_priesthood");
          $diaconate = _get_value($person,"field_person_diaconate");
          if ($diaconate && !$priesthood) {
            $diaconate = new DateTime(_get_value($person,"field_person_diaconate"));
            print ",".date_format($diaconate,'m/d/Y');
          }
          else { 
            print ",";
          }
          if ($priesthood) {
            $priesthood = new DateTime(_get_value($person,"field_person_priesthood"));
            print ",".date_format($priesthood,'m/d/Y');
          }
          else { 
            print ","; 
          }
        }
      if (in_array('Wardens',$form['who']['#value']) ||
        in_array('Clergy in Congregations',$form['who']['#value'])) {
          $p_types = pro_relationship_types();
          $rels = find_pro_relationships(FALSE,$person);
          $parishes = array();
          $types = array();
          foreach ($rels as $rel) {
            if (isset($rel['relative']->title)) {
              $parishes[] = $rel['relative']->title;
            }
            else {
              $parishes[] = _get_value($rel['node'],"field_org_nr");
            }
            $types[] = $p_types[$rel['type']];
          }
          print ',"'.implode(";",$parishes).'",'.'"'.implode(";",$types).'"';
        }
      print "\n";
    }
    exit;
  }
  if ($type == "report") {
    header("Content-type: text/txt");
    header("Content-Disposition: attachment; filename=".$filename.".txt");
    header("Pragma: no-cache");
    header("Expires: 0");
    foreach ($people['nodes'] as $person) {
      print _get_value($person,"field_person_title") . " ";
      print person_get_full_name($person);
      print " "._get_value($person,"field_person_suffix");
      if ($nickname = _get_value($person,"field_person_nickname"))
        print " (".$nickname.")";
      print "\n";
      $mail = array_filter(person_get_address($person,"mail"));
      $home = array_filter(person_get_address($person,"home"));
      if ($address == "mail") {
        if (!empty($mailing)) {
          print implode(", ",$mail);
        } else {
          print implode(", ",$home);
        }
      }
      elseif ($address == "home") {
        print implode(", ",$home);
      }
      else {
        print implode(", ",$home);
        print "\n";
        print implode(", ",$mail);
      }
      print "\n";
      $phone = person_get_phone($person,"pref");
      print $phone['number']."\n";
      $email = person_get_email($person,"pref");
      print $email['addy']."\n";
      $this_month = str_pad(date('m'),2,'0',STR_PAD_LEFT);
      if (date('m') == "12")
        $next_month = "01";
      else
        $next_month = str_pad(date('m') + 1,2,'0',STR_PAD_LEFT);
      $dob = new DateTime(_get_value($person,"field_person_dob"));
      if ((in_array('Clergy Birthdays This Month',$form['who']['#value']) && $this_month == date_format($dob,'m')) ||
        (in_array('Clergy Birthdays Next Month',$form['who']['#value']) && $next_month == date_format($dob,'m'))) 
      {
        print "Birthday: ".date_format($dob,'m/d/Y')."\n";

      }
      $priesthood = _get_value($person,"field_person_priesthood");
      $priesthood = new DateTime(_get_value($person,"field_person_priesthood"));
      $diaconate = _get_value($person,"field_person_diaconate");
      $diaconate = new DateTime(_get_value($person,"field_person_diaconate"));
      if (in_array('Clergy Ordination Anniversaries This Month',$form['who']['#value']))
      {
        if (($diaconate && !$priesthood) && $this_month == date_format($diaconate,'m')) {
          print "Diaconate Ordination: ".date_format($diaconate,'m/d/Y')."\n";
        }
        if ($priesthood && ($this_month == date_format($priesthood,'m'))) {
          print "Priesthood Ordination: ".date_format($priesthood,'m/d/Y')."\n";
        }
      }
      if (in_array('Clergy Ordination Anniversaries Next Month',$form['who']['#value']))
      {
        if (($diaconate && !$priesthood) && $next_month == date_format($diaconate,'m')) {
          print "Diaconate Ordination: ".date_format($diaconate,'m/d/Y')."\n";
        }
        if ($priesthood && ($next_month == date_format($priesthood,'m'))) {
          print "Priesthood Ordination: ".date_format($priesthood,'m/d/Y')."\n";
        }
      }
      print "\n";
    }
    exit;
  }

  elseif ($type == "txt") {
    header("Content-type: text/txt");
    header("Content-Disposition: attachment; filename=".$filename.".txt");
    header("Pragma: no-cache");
    header("Expires: 0");
    $no_email = array();
    foreach ($people['nodes'] as $person) {
      $email = person_get_email($person,"pref");
      if (!empty($email['addy'])) {
        print $person->title." "."<".$email['addy'].">\n";
      }
      else {
        $no_email[] = $person->title;
      }
    }
    if (!empty($no_email)) {
      print "\n\nNo emails:\n";
      print implode("\n",$no_email);
    }
    exit;
  }
}

function person_safe_form($form,&$form_state) {
  $form['csv'] = array(
    '#type' => 'file',
    '#title' => "Upload a CSV",
    '#tree' => TRUE,
  );
  $people = person_fetch_people("Clergy");
  $form['requireall'] = array(
    '#type' => 'checkbox',
    '#tree' => true,
    '#title' => 'Set all listed people to required',
  );
  $form['people'] = array(
    '#theme' => 'table',
    '#header' => array('Title','Required','Date'),
    '#rows'=> array(),
    '#tree' => true,
  );
  $expired = "";
  foreach ($people['nodes'] as $person) {
    $name = $person->field_person_last_name['und'][0]['value'].", ";
    if (isset($person->field_person_title['und']['0']['value'])) {
      $name .= $person->field_person_title['und']['0']['value']." ";
    }
    if (isset($person->field_person_first_name['und']['0']['value'])) {
      $name .=  $person->field_person_first_name['und']['0']['value']." ";
    }
    if (isset($person->field_person_middle_name['und']['0']['value'])) {
      $name .= $person->field_person_middle_name['und']['0']['value']." ";
    }
    if (isset($person->field_person_suffix['und']['0']['value'])) {
      $name .= $person->field_person_suffix['und']['0']['value']." ";
    }
    if (isset($person->field_person_email_pref['und']['0']['value'])) {
      $email = $person->field_person_email_pref['und']['0']['value'];
    }
    $required = 0;
    if (isset($person->field_person_safe_church['und'][0]['value'])) {
      $required = $person->field_person_safe_church['und'][0]['value'];
    }
    $date = "";
    if (isset($person->field_safe_church_training_date['und'][0]['value'])) {
      $date = date('m/d/Y',$person->field_safe_church_training_date['und'][0]['value']);
    }
    $style ="";
    $expiration = strtotime("1/1/".(date('Y')-5));
    if ($required == 1 && (empty($date) || strtotime($date) < $expiration)) {
      $style = "background: #ff7777; ";
      $expired .= trim($name);
      if (isset($email)) {
        $expired.=" <".$email.">";
      }
      $expired .="\n";
    }
    $name = l(rtrim($name," ,"),"node/".$person->nid);
    $req_field = array(
      '#name' => 'required-'.$person->nid,
      '#type' => 'checkbox',
      '#tree' => true,
    );
    if ($required) {
      $req_field['#attributes']['checked'] = TRUE;
    }
    $date_field = array(
      '#name' => 'safedate-'.$person->nid,
      '#type'=> 'textfield',
      '#value' => $date,
      '#tree' => true,
    );
    $row = array(
      'Title' => $name,
      array('data'=>&$req_field),
      array('data'=>&$date_field),
    );
    $form['people']['#rows'][] = array('data'=>$row,'style'=>$style);
    unset($req_field);
    unset($date_field);
    unset($email);
  }
  $form['expired'] = array(
    '#type'=>'textarea',
    '#value'=>$expired,
    '#title'=>'People with expired training',
    '#weight'=>-10,
  );
  $form['submit'] = array(

    '#type' => 'submit',
    '#value' => 'Save Changes / Process CSV',
  );
  $form['#submit'] = array('person_safe_form_submit');
  return $form;
}

