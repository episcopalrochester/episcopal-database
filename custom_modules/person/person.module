function person_fetch_people($type="All People",$last="",$first="",$status="living",$limit=FALSE) {
  if (!is_array($type)) {
    $type = array(person_type_queries($type));
  }
  $query = db_select("node","n");
  $query->leftJoin("field_data_field_person_last_name","l","l.entity_id = n.nid");
  $query->leftJoin("field_data_field_person_first_name","f","f.entity_id = n.nid");
  $query->leftJoin("field_data_field_person_priesthood","p","p.entity_id = n.nid");
  $query->leftJoin("field_data_field_person_diaconate","d","d.entity_id = n.nid");
  $query->leftJoin("field_data_field_person_consecration","c","c.entity_id = n.nid");
  $query->leftJoin("field_data_field_person_dob","b","b.entity_id = n.nid");
  $query->leftJoin("field_data_field_person_dod","m","m.entity_id = n.nid");
  if (is_array($type)) {
    foreach ($type as $q) {
      if (is_array($q)) {
        $query->leftJoin($q['table'],$q['abv'],$q['abv'].".entity_id = n.nid");
      }
      elseif ($q == "Wardens" || $q == "Clergy in Congregations") {
        $query->leftJoin("field_data_field_pf_first","ft","ft.field_pf_first_nid = n.nid");
        $query->leftJoin("field_data_field_pf_type","jt","jt.entity_id = ft.entity_id");
        $query->leftJoin("field_data_field_pf_start","js","js.entity_id = ft.entity_id");
        $query->leftJoin("field_data_field_pf_end","je","je.entity_id = ft.entity_id");
      }
    }
  }
  $query->fields('n',array('nid'))
    ->condition("n.type","person","=")
    ->orderBy('l.field_person_last_name_value','ASC')
    ->orderBy('f.field_person_first_name_value','ASC')
    ->condition('n.status', 1);
  if (!empty($last)) {
    $query->condition('l.field_person_last_name_value',"%".check_plain($last)."%",'LIKE');
  }
  if (!empty($first)) {
    $query->condition('f.field_person_first_name_value',"%".check_plain($first)."%",'LIKE');
  }
  if ($status == "deceased") {
    $query->isNotNull('m.field_person_dod_value');
  }
  else {
    $query->isNull('m.field_person_dod_value');
  }

  if (is_array($type)) {
    $who = db_or();
    foreach ($type as $q) {
      if ($q == "All People") { 
        $who->isNotNull('n.title');
      }
      elseif ($q == "Clergy") {
        $is_clergy = db_or()
          ->isNotNull('p.field_person_priesthood_value')
          ->isNotNull('d.field_person_diaconate_value')
          ->isNotNull('c.field_person_consecration_value');
        $who->condition($is_clergy);
      }
      elseif ($q == "Laity") {
        $is_not_clergy = db_and();
        $is_not_clergy->isNull('p.field_person_priesthood_value')
          ->isNull('d.field_person_diaconate_value')
          ->isNull('c.field_person_consecration_value');
        $who->condition($is_not_clergy);
      }
      elseif ($q == "Clergy Birthdays This Month") {
        $is_clergy = db_or()
          ->isNotNull('p.field_person_priesthood_value')
          ->isNotNull('d.field_person_diaconate_value')
          ->isNotNull('c.field_person_consecration_value');
        $is_birthday = db_and()
          ->condition("b.field_person_dob_value","____-".date('m')."-%","LIKE")
          ->condition($is_clergy);
        $who->condition($is_birthday);
      }
      elseif ($q == "Clergy Birthdays Next Month") {
        if (date('m') == "12")
          $date = "01";
        else
          $date = str_pad(date('m') + 1,2,'0',STR_PAD_LEFT);
        $is_clergy = db_or()
          ->isNotNull('p.field_person_priesthood_value')
          ->isNotNull('d.field_person_diaconate_value')
          ->isNotNull('c.field_person_consecration_value');
        $is_birthday = db_and()
          ->condition("b.field_person_dob_value","____-".$date."-%","LIKE")
          ->condition($is_clergy);
        $who->condition($is_birthday);
      }
      elseif ($q == "Clergy Ordination Anniversaries This Month") {
        $Panniversary = db_and()
          ->condition('p.field_person_priesthood_value',"____-".date('m')."-%","LIKE")
          ->isNull('c.field_person_consecration_value');
        $Danniversary = db_and()
          ->condition('d.field_person_diaconate_value',"____-".date('m')."-%","LIKE")
          ->isNull('p.field_person_priesthood_value');
        $anniversary = db_or()
          ->condition($Panniversary)
          ->condition($Danniversary);
        $who->condition($anniversary);
      }
      elseif ($q == "Clergy Ordination Anniversaries Next Month") {
        if (date('m') == "12") 
          $date = "01";
        else
          $date = str_pad(date('m') + 1,2,'0',STR_PAD_LEFT);
        $Panniversary = db_and()
          ->condition('p.field_person_priesthood_value',"____-".$date."-%","LIKE")
          ->isNull('c.field_person_consecration_value');
        $Danniversary = db_and()
          ->condition('d.field_person_diaconate_value',"____-".$date."-%","LIKE")
          ->isNull('p.field_person_priesthood_value');
        $anniversary = db_or()
          ->condition($Panniversary)
          ->condition($Danniversary);
        $who->condition($anniversary);
      }
      elseif ($q == "Wardens") {
        $wardens = db_or();
        $wardens->condition("jt.field_pf_type_value","wardenjr");
        $wardens->condition("jt.field_pf_type_value","wardensr");
        $wardens->condition("jt.field_pf_type_value","warden");
        $now = date("Y-m-d");
        $not_past = db_or()
          ->condition("js.field_pf_start_value",$now,"<")
          ->isNull("js.field_pf_start_value");
        $not_future = db_or()
          ->condition("je.field_pf_end_value",$now,">")
          ->isNull("je.field_pf_end_value");
        $is_a_warden_now = db_and()
          ->condition($wardens)
          ->condition($not_past)
          ->condition($not_future);
        $who->condition($is_a_warden_now);
      }
      elseif ($q == "Clergy in Congregations") {
        $clergy = db_or();
        $clergy->condition("jt.field_pf_type_value","rector");
        $clergy->condition("jt.field_pf_type_value","pic");
        $clergy->condition("jt.field_pf_type_value","associate");
        $clergy->condition("jt.field_pf_type_value","assistant");
        $clergy->condition("jt.field_pf_type_value","priest");
        $clergy->condition("jt.field_pf_type_value","vicar");
        $clergy->condition("jt.field_pf_type_value","pastor");
        $clergy->condition("jt.field_pf_type_value","deacon");
        $clergy->condition("jt.field_pf_type_value","chaplain");
        $now = date("Y-m-d");
        $not_past = db_or()
          ->condition("js.field_pf_start_value",$now,"<")
          ->isNull("js.field_pf_start_value");
        $not_future = db_or()
          ->condition("je.field_pf_end_value",$now,">")
          ->isNull("je.field_pf_end_value");
        $is_a_warden_now = db_and()
          ->condition($clergy)
          ->condition($not_past)
          ->condition($not_future);
        $who->condition($is_a_warden_now);
      }

      else {
        $who->condition($q['abv'].".".$q['field'],$q['value'],$q['operation']);
      }
    }
    $query->condition($who);
  }
  if ($limit) {
    $query = $query->extend('PagerDefault')->limit($limit);
  }
  $query->distinct();
  $result = $query->execute();
  $people = array('nodes' => array(), 'pager' => '');
  while ($record = $result->fetchAssoc()) {
    $people['nodes'][] = node_load($record['nid']);
  }
  return $people;
}

function person_is_alive($person) {
  if (field_get_items('node',$person,'field_person_dod')) {
    return false;
  }
  return true; 
}

function person_is_clergy($person) {
  $is_clergy = false;
  $fields = array('field_person_diaconate','field_person_priesthood','field_person_consecration');
  foreach ($fields as $field) {
    if (field_get_items('node',$person,$field)) {
      $is_clergy = true;
    }
  }
  return $is_clergy;
}

function person_get_full_name($person) {
  $first = field_get_items('node',$person,'field_person_first_name');
  $middle = field_get_items('node',$person,'field_person_middle_name');
  if (!isset($middle[0]['value'])) {
    $middle[0]['value'] = "";
  }
  $nick = field_get_items('node',$person,'field_person_nickname');
  if (isset($nick[0]['value'])) {
    if (!empty($nick[0]['value'])) {
      $first[0]['value'] = "";
      $middle[0]['value'] = "";
    }
    else {
      $nick[0]['value'] = "";
    }
  }
  else {
    $nick[0]['value'] = "";
  }
  $last = field_get_items('node',$person,'field_person_last_name');
  return trim(preg_replace('!\s+!', ' ', implode(" ",array(
    $nick[0]['value'],
    $first[0]['value'],
    $middle[0]['value'],
    $last[0]['value'],
  ))));
}

